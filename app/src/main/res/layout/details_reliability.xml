<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:id="@+id/DetailsReliability">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/reliability_circular_ProgressBar"
            style="@style/CircularReliabilityProgressBar"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_centerInParent="true"
            android:max="100"
            android:progress="50" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/details_reliability_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/appbar_background_color"
                android:text="25"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/details_reliabilityTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fiabilidad"
                android:textSize="15sp"
                android:textColor="@color/appbar_background_color"
                android:textStyle="bold"/>

        </LinearLayout>

    </RelativeLayout>




</LinearLayout>